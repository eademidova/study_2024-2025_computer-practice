#!/bin/bash

# Устанавливаем счетчик для новых имен файлов
count=1

# Цикл по файлам в текущем каталоге
for file in Снимок\ экрана\ от\ 2024-11-29\ *; do

  # Извлечение даты и времени из имени файла

  # Переименование файла с добавлением даты и времени
  mv "$file" "$count.png"
  # echo "$file"
  # Увеличиваем счетчик для следующего файла
  ((count++))
done
